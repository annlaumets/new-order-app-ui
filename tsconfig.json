{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".eslintrc.json",
    "jest.config.js",
    "jest.setup.js"
  ],
  "exclude": ["node_modules"]
}
